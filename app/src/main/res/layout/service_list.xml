<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="84dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="-2dp"
    android:layout_marginBottom="-2dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="@color/transparent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/serviceCardDate"
            android:text="1.24.20"
            android:textColor="#454557"
            android:layout_weight="25"
            android:textAlignment="center"
            android:layout_gravity="center"
            ></TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/serviceCardDivider"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="18dp"
            android:src="@drawable/serviceyellowlinebottom"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/serviceCardBackground"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:orientation="vertical"
            android:background="@drawable/orangebackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:weightSum="100"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/serviceCardTitle"
                    android:layout_gravity="start"
                    android:text="Oil Change"
                    android:layout_weight="70"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textColor="#ECA400"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/serviceCardPrice"
                    android:gravity="right"
                    android:text="$74.99"
                    android:layout_weight="30"
                    android:textColor="#454557"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:weightSum="100"
                android:orientation="horizontal">


                <ImageButton
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:background="@color/transparent"
                    android:id="@+id/serviceCardAttachment"
                    android:src="@drawable/serviceattachment"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:src="@drawable/servicepin"/>

            <TextView
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:id="@+id/serviceCardLocation"
                android:text="Express Lube, Lake City, SC"
                android:textColor="#454557"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_weight="85"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="10dp"
                />

                <ImageButton
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/serviceCardDelete"
                    android:layout_gravity="right"
                    android:layout_weight="3"
                    android:background="@color/transparent"
                    android:src="@drawable/servicedelete"/>


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>






</androidx.cardview.widget.CardView>